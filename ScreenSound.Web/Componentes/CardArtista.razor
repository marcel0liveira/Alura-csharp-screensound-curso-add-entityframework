<MudCard>
    <MudCardMedia Image="@Artista!.FotoPerfil" />
    <MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.h6">
                @Artista!.Nome
            </MudText>
        </MudCardContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">
            @Artista!.Bio
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
            Variant="Variant.Outlined"
            Href=@($"/EditarArtista/{Artista!.Nome}")>Detalhes
        </MudButton>
    </MudCardActions>
</MudCard>


@code {
    [Parameter]
    public ArtistaResponse? Artista { get; set; }
}